<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Code para o Meu Site</title>
    <script src="https://cdn.jsdelivr.net/npm/qrious@4.0.2/dist/qrious.min.js"></script>
</head>
<body>
    <h1>QR Code para o Meu Site</h1>
    <canvas id="qr-code"></canvas>

    <script>
        var qr = new QRious({
            element: document.getElementById('qr-code'),
            value: 'https://www.seusite.com',  // Substitua com o link do seu site
            size: 200,  // Tamanho do QR code
            background: '#ffffff',
            foreground: '#000000'
        });
    </script>
</body>
